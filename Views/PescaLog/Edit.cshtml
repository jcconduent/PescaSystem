@model PescaSystem.Models.PescaLog

@{
    ViewData["Title"] = "Editar Registro de Pesca";
}

<h1>@ViewData["Title"]</h1>
<p></p>

<form asp-action="Edit">
    <div class="form-row-first">
        <label asp-for="Fecha" class="control-label"></label>
            <input asp-for="Fecha" class="form-control-small" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
        <label for="yate">Yate:</label>
        <select id="yate" name="Yate">
            @Html.Raw(TempData["LYate"]?.ToString() ?? "")
        </select>
        <label for="capitan">Capitán:</label>
        <select id="capitan" name="Capitan">
            @Html.Raw(TempData["LCapitan"]?.ToString() ?? "")
        </select>
        <label asp-for="Grupo" class="control-label"></label>
        <input asp-for="Grupo" class="form-control-small" />
        <span asp-validation-for="Grupo" class="text-danger"></span>
    </div>
    <hr />
    <p></p>
    <div class="form-row">    
        <label asp-for="VelaFlotados" class="control-label"></label>
        <input asp-for="VelaFlotados" class="form-control-small" type="number" />
        <label asp-for="VelaPiques" class="control-label"></label>
        <input asp-for="VelaPiques" class="form-control-small" type="number" />
        <label asp-for="VelaLiberados" class="control-label"></label>
        <input asp-for="VelaLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="VelaMoscaFlotados" class="control-label"></label>
        <input asp-for="VelaMoscaFlotados" class="form-control-small" type="number" />
        <label asp-for="VelaMoscaPiques" class="control-label"></label>
        <input asp-for="VelaMoscaPiques" class="form-control-small" type="number" />
        <label asp-for="VelaMoscaLiberados" class="control-label"></label>
        <input asp-for="VelaMoscaLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="MarlinAzulFlotados" class="control-label"></label>
        <input asp-for="MarlinAzulFlotados" class="form-control-small" type="number" />
        <label asp-for="MarlinAzulPiques" class="control-label"></label>
        <input asp-for="MarlinAzulPiques" class="form-control-small" type="number" />
        <label asp-for="MarlinAzulLiberados" class="control-label"></label>
        <input asp-for="MarlinAzulLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="MarlinMoscaAzulFlotados" class="control-label"></label>
        <input asp-for="MarlinMoscaAzulFlotados" class="form-control-small" type="number" />
        <label asp-for="MarlinMoscaAzulPiques" class="control-label"></label>
        <input asp-for="MarlinMoscaAzulPiques" class="form-control-small" type="number" />
        <label asp-for="MarlinMoscaAzulLiberados" class="control-label"></label>
        <input asp-for="MarlinMoscaAzulLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="MarlinRayadoFlotados" class="control-label"></label>
        <input asp-for="MarlinRayadoFlotados" class="form-control-small" type="number" />
        <label asp-for="MarlinRayadoPiques" class="control-label"></label>
        <input asp-for="MarlinRayadoPiques" class="form-control-small" type="number" />
        <label asp-for="MarlinRayadoLiberados" class="control-label"></label>
        <input asp-for="MarlinRayadoLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="MarlinMoscaRayadoFlotados" class="control-label"></label>
        <input asp-for="MarlinMoscaRayadoFlotados" class="form-control-small" type="number" />
        <label asp-for="MarlinMoscaRayadoPiques" class="control-label"></label>
        <input asp-for="MarlinMoscaRayadoPiques" class="form-control-small" type="number" />
        <label asp-for="MarlinMoscaRayadoLiberados" class="control-label"></label>
        <input asp-for="MarlinMoscaRayadoLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="MarlinNegroFlotados" class="control-label"></label>
        <input asp-for="MarlinNegroFlotados" class="form-control-small" type="number" />
        <label asp-for="MarlinNegroPiques" class="control-label"></label>
        <input asp-for="MarlinNegroPiques" class="form-control-small" type="number" />
        <label asp-for="MarlinNegroLiberados" class="control-label"></label>
        <input asp-for="MarlinNegroLiberados" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="Dorado" class="control-label"></label>
        <input asp-for="Dorado" class="form-control-small" type="number" />
        <label asp-for="DoradoFly" class="control-label"></label>
        <input asp-for="DoradoFly" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="Atun" class="control-label"></label>
        <input asp-for="Atun" class="form-control-small" type="number" />
        <label asp-for="AtunFly" class="control-label"></label>
        <input asp-for="AtunFly" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="Gallos" class="control-label"></label>
        <input asp-for="Gallos" class="form-control-small" type="number" />
        <label asp-for="Wahoo" class="control-label"></label>
        <input asp-for="Wahoo" class="form-control-small" type="number" />
    </div>
    <p></p>
    <div class="form-row">
        <label asp-for="DieselConsumido" class="control-label"></label>
        <input asp-for="DieselConsumido" class="form-control-small" type="number" step="0.01" />
        <label asp-for="MillasRecorridas" class="control-label"></label>
        <input asp-for="MillasRecorridas" class="form-control-small" type="number" step="0.01" />
    </div>
    <p></p>
    <div class="form-group">
        <label asp-for="Comentario" class="control-label"></label>
        <textarea asp-for="Comentario" class="form-control"></textarea>
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>
    <p></p>
    <input type="hidden" asp-for="Id" />

    <button type="submit" asp-route-FFecha="@TempData["FFecha"]" asp-route-FFechaHasta="@TempData["FFechaHasta"]" asp-route-FYate="@TempData["FYate"]" asp-route-FCapitan="@TempData["FCapitan"]" asp-route-FGrupo="@TempData["FGrupo"]" class="btn btn-success" title="Grabar">
        <i class="fas fa-check-circle"></i> <!-- Icono de grabar -->
    </button>
    <a asp-action="Index" asp-route-FFecha="@TempData["FFecha"]" asp-route-FFechaHasta="@TempData["FFechaHasta"]" asp-route-FYate="@TempData["FYate"]" asp-route-FCapitan="@TempData["FCapitan"]" asp-route-FGrupo="@TempData["FGrupo"]" class="btn btn-danger" title="Cancelar">
        <i class="fas fa-times-circle"></i> <!-- Icono de cancelar -->
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

