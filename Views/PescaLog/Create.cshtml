@model PescaSystem.Models.PescaLog

@{
    ViewData["Title"] = "Agregar Nuevo Registro de Pesca";
}

<h1>@ViewData["Title"]</h1>

<h4>PescaLog</h4>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Dia" class="control-label"></label>
        <input asp-for="Dia" class="form-control" type="date" />
        <span asp-validation-for="Dia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Barco" class="control-label"></label>
        <input asp-for="Barco" class="form-control" />
        <span asp-validation-for="Barco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capitan" class="control-label"></label>
        <input asp-for="Capitan" class="form-control" />
        <span asp-validation-for="Capitan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cliente" class="control-label"></label>
        <input asp-for="Cliente" class="form-control" />
        <span asp-validation-for="Cliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DieselConsumido" class="control-label"></label>
        <input asp-for="DieselConsumido" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="DieselConsumido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MillasRecorridas" class="control-label"></label>
        <input asp-for="MillasRecorridas" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="MillasRecorridas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SailfishRaises" class="control-label"></label>
        <input asp-for="SailfishRaises" class="form-control" type="number" />
        <span asp-validation-for="SailfishRaises" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SailfishBites" class="control-label"></label>
        <input asp-for="SailfishBites" class="form-control" type="number" />
        <span asp-validation-for="SailfishBites" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SailfishReleases" class="control-label"></label>
        <input asp-for="SailfishReleases" class="form-control" type="number" />
        <span asp-validation-for="SailfishReleases" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarlinRaises" class="control-label"></label>
        <input asp-for="MarlinRaises" class="form-control" type="number" />
        <span asp-validation-for="MarlinRaises" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarlinBites" class="control-label"></label>
        <input asp-for="MarlinBites" class="form-control" type="number" />
        <span asp-validation-for="MarlinBites" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarlinReleases" class="control-label"></label>
        <input asp-for="MarlinReleases" class="form-control" type="number" />
        <span asp-validation-for="MarlinReleases" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoradoRaises" class="control-label"></label>
        <input asp-for="DoradoRaises" class="form-control" type="number" />
        <span asp-validation-for="DoradoRaises" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoradoBites" class="control-label"></label>
        <input asp-for="DoradoBites" class="form-control" type="number" />
        <span asp-validation-for="DoradoBites" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoradoReleases" class="control-label"></label>
        <input asp-for="DoradoReleases" class="form-control" type="number" />
        <span asp-validation-for="DoradoReleases" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TunaRaises" class="control-label"></label>
        <input asp-for="TunaRaises" class="form-control" type="number" />
        <span asp-validation-for="TunaRaises" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TunaBites" class="control-label"></label>
        <input asp-for="TunaBites" class="form-control" type="number" />
        <span asp-validation-for="TunaBites" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TunaReleases" class="control-label"></label>
        <input asp-for="TunaReleases" class="form-control" type="number" />
        <span asp-validation-for="TunaReleases" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comentario" class="control-label"></label>
        <textarea asp-for="Comentario" class="form-control"></textarea>
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
